<form action="/recipes/<%=@recipe.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">Recipe Name:<input type="text" name="name" value="<%=@recipe.name%>"></label>
  <label for="ingredients">Recipe Ingredients:<input type="text" name="ingredients" value="<%=@recipe.ingredients%>"></label>
  <label for="cook_time">Recipe Name:<input type="text" name="cook_time" value="<%=@recipe.cook_time%>"></label>
  <input type="submit" value="submit">
</form>