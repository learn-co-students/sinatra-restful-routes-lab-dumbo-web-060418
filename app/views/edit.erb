<h1>Edit a Recipe</h1>
<form method="POST" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Recipe Name</label>
  <input id='name' type="text" value="<%= @recipe.name %>" name="recipe[name]"/>
  <br>
  <label>Recipe Ingredients</label>
  <input id='ingredients' type="text" value="<%= @recipe.ingredients %>"  name="recipe[ingredients]"/>
  <br>
  <label>Recipe Cook Time</label>
  <input id='cook_time' type="text" value="<%= @recipe.cook_time %>"  name="recipe[cook_time]"/>
  <br>
  <input type="submit" value="submit">
</form>
